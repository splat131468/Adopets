<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ADOPETS?serverTimezone=Asia/Taipei</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">password</property>

		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.current_session_context_class">thread</property>

		<mapping class="com.product.model.VO.AttributesVO" />
		<mapping class="com.product.model.VO.CategoryVO" />
		<mapping class="com.product.model.VO.SpuVO" />
		<mapping class="com.product.model.VO.PImgVO" />
		<mapping class="com.product.model.VO.SkuVO" />
		<mapping class="com.product.model.VO.ValueVO" />



	</session-factory>
</hibernate-configuration>
